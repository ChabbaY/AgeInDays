<PreferenceScreen
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <PreferenceCategory
        app:title="@string/customization_header">
        <ListPreference
            app:key="@string/theme_key"
            app:title="@string/theme_title"
            app:icon="@drawable/ic_theme"
            app:dialogTitle="@string/theme_dialog_title"
            app:entries="@array/themes_entries"
            app:entryValues="@array/themes_values"
            app:defaultValue="@string/system_theme_value"
            app:useSimpleSummaryProvider="true" />
    </PreferenceCategory>
</PreferenceScreen>